@model Brutus.DTOs.RodzicWithUczniowie

<h1>Uczniowie</h1>

@if (Model != null)
{
    <table>
        <thead>
        <tr>
            <th>ID</th>
            <th>Imie</th>
            <th>Nazwisko</th>
            <th>Akcje</th>
        </tr>
        </thead>
        <tbody>
        @foreach (Konto kontoUcznia in Model.kontaUczniowTegoRodzica)
        {
            <tr>
            <td>@kontoUcznia.ID_Konta</td>
            <td>@kontoUcznia.Imie</td>
            <td>@kontoUcznia.Nazwisko</td>
            <td>
                <form action="/RodzicPanel/Oceny" method="get" style="display: inline;">
                    <input type="hidden" name="idUcznia" value="@kontoUcznia.ID_Konta" />
                            <button type="submit" class="btn">Pokaż oceny ucznia</button>
                </form>
            </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>Brak dzieci do wyświetlenia.</p>
}