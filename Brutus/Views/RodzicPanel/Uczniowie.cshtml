@model Brutus.DTOs.RodzicWithUczniowie

<h1>Uczniowie</h1>

@if (Model != null)
{
    <table>
        <thead>
        <tr>
            <th>ID</th>
            <th>Imie</th>
            <th>Nazwisko</th>
        </tr>
        </thead>
        <tbody>
        @foreach (Konto kontoUcznia in Model.kontaUczniowTegoRodzica)
        {
            <tr>
            <td>@kontoUcznia.ID_Konta</td>
            <td>@kontoUcznia.Imie</td>
            <td>@kontoUcznia.Nazwisko</td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
