@model IEnumerable<Brutus.Models.Test>

<h2>Lista Testów</h2>

<table>
    <thead>
    <tr>
        <th>Nazwa Testu</th>
        <th>Czas Trwania</th>
        <th>Liczba Zadań</th>
        <th>Akcje</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var test in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => test.Nazwa)</td>
            <td>@Html.DisplayFor(modelItem => test.CzasTrwania)</td>
            <td>@Html.DisplayFor(modelItem => test.LiczbaZadan)</td>
            <td><form action="/Testy/RozwiazywanieTestu" method="get">
                    <input type="hidden" name="idTestu" value="@test.ID_Testu" />
                    <button type="submit">Rozpocznij Test</button>
                </form> 
            </td>
        </tr>
    }
    </tbody>
</table>

<form action="/UczenPanel" method="get">
    <button type="submit">Wróć do menu ucznia</button>
</form> 
