@model Brutus.Models.Konto

<h1>Podgląd ucznia</h1>
<h2>@Model.ID_Konta @Model.Imie @Model.Nazwisko</h2>

<table>
    <thead>
        <tr>
            <th colspan="2">Akcje</th>
        </tr>
    </thead>
    <tbody>
            <tr>
                <td>
                <form action="/PodgladUczniaWPrzedmiocie/DodajOcene" method="get" style="display: inline;">
                    <input type="hidden" name="idPrzedmiotu" value="@ViewBag.IDPrzedmiotu" />
                    <input type="hidden" name="idUcznia" value="@Model.ID_Konta" />
                    <button type="submit" class="btn">Dodaj ocenę</button>
                </form>
                </td>
                <td>
                <form action="/PodgladUczniaWPrzedmiocie/GenerujZestawienie" method="get" style="display: inline;">
                    <input type="hidden" name="idPrzedmiotu" value="@ViewBag.IDPrzedmiotu" />
                    <input type="hidden" name="idUcznia" value="@Model.ID_Konta" />

                    <div>
                        <input type="checkbox" name="czyZawieraKomentarze" value="true" />
                        <label for="czyZawieraKomentarze">Komentarze</label>
                    </div>

                    <div>
                        <input type="checkbox" name="czyZawieraWagi" value="true" />
                        <label for="czyZawieraWagi">Wagi</label>
                    </div>

                    <div>
                        <input type="checkbox" name="czyPorownanieNaTleKlasy" value="true" />
                        <label for="czyPorownanieNaTleKlasy">Zestawienie na tle klasy</label>
                    </div>

                    <div>
                        <label for="dataPoczatkowa">Data początkowa:</label>
                        <input type="date" name="dataPoczatkowa" required>
                    </div>

                    <div>
                        <label for="dataKoncowa">Data końcowa:</label>
                        <input type="date" name="dataKoncowa" required>
                    </div>

                    <button type="submit" class="btn">Generuj zestawienie</button>
                </form>
                </td>
            </tr>
    </tbody>
</table>