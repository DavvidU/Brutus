@using Brutus.Models
@model List<Pytanie>

@{
    int testId = ViewBag.TestId;
    int liczbaZadan = ViewBag.LiczbaZadan;
}

<h2>Dodaj Pytania</h2>

<form action="/Pytania/Create" method="post">
    <input type="hidden" name="TestId" value="@testId" />
    @for (int i = 0; i < liczbaZadan; i++)
    {
        <div class="form-group">
            <label for="Tresc_@i">Treść Pytania:</label>
            <input type="text" id="Tresc_@i" name="[@i].Tresc" required class="full-width" />
        </div>

        <div class="form-group">
            <label for="Punkty_@i">Punkty:</label>
            <input type="number" id="Punkty_@i" name="[@i].Punkty" required />
        </div>

        <div class="form-group">
            <label for="WariantA_@i">Wariant A:</label>
            <input type="text" id="WariantA_@i" name="[@i].WariantA" required />
        </div>

        <div class="form-group">
            <label for="WariantB_@i">Wariant B:</label>
            <input type="text" id="WariantB_@i" name="[@i].WariantB" required />
        </div>

        <div class="form-group">
            <label for="WariantC_@i">Wariant C:</label>
            <input type="text" id="WariantC_@i" name="[@i].WariantC" required />
        </div>

        <div class="form-group">
            <label for="WariantD_@i">Wariant D:</label>
            <input type="text" id="WariantD_@i" name="[@i].WariantD" required />
        </div>

        <div class="form-group">
            <label for="PoprawnaOdpowiedz_@i">Poprawna Odpowiedź (A/B/C/D):</label>
            <select id="PoprawnaOdpowiedz_@i" name="[@i].PoprawnaOdpowiedz" required>
                <option value="">--Wybierz opcję--</option>
                <option value="A">A</option>
                <option value="B">B</option>
                <option value="C">C</option>
                <option value="D">D</option>
            </select>
        </div>
        <hr />
    }
    <input type="submit" value="Zapisz Pytania" />
</form>

<style>
    .form-group {
        margin-bottom: 1rem;
    }

    label {
        display: inline-block;
        width: 120px;
        text-align: right;
        margin-right: 0.5rem;
    }

    input[type="text"],
    input[type="number"],
    select {
        width: 150px;
    }

    .form-row {
        display: flex;
        align-items: center;
        margin-bottom: 0.5rem;
    }

        .form-row > div {
            margin-right: 1rem;
        }

    .submit-button {
        display: block;
        width: 100%;
        margin-top: 1rem;
    }
</style>