@model Przedmiot

<form action="Update" method="post">
    <input type="hidden" asp-for="ID_Przedmiotu" />
    <div>
        <label>Nazwa:</label>
        <input type="text" asp-for="Nazwa" required />
    </div>
    <div>
        <label>Opis:</label>
        <textarea asp-for="Opis" required></textarea>
    </div>
    <button type="submit">Zapisz zmiany</button>
</form>